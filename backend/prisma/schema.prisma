// [cite: 73] Server DB: PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String   
  budgets  Budget[]
}

// [cite: 13, 14] Budget Fields
model Budget {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  income        Float
  monthlyBills  Float
  food          Float
  transport     Float
  subscriptions Float
  miscellaneous Float
  updatedAt     DateTime @updatedAt
}
